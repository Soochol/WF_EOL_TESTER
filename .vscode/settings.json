{
    // === Editor Core Settings ===
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "editor.rulers": [100],
    "editor.wordWrap": "off",
    "editor.trimAutoWhitespace": true,

    // === File Management ===
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.autoSave": "onFocusChange",

    // === Python Environment ===
    "python.defaultInterpreterPath": "/home/blessp/my_code/WF_EOL_TESTER/venv/bin/python",
    "python.terminal.activateEnvironment": false,

    // === Python Analysis (Fixed) ===
    "python.languageServer": "Pylance",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.extraPaths": ["./src"],
    "python.analysis.indexing": true,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportUndefinedVariable": "none"
    },

    // === Python Language-Specific Settings ===
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always",
            "source.fixAll": "always"
        },
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.rulers": [100]
    },

    // === Black Formatter Configuration ===
    "black-formatter.args": [
        "--config",
        "pyproject.toml"
    ],
    "black-formatter.importStrategy": "fromEnvironment",

    // === Flake8 Linting Configuration ===
    "flake8.enabled": true,
    "flake8.lintOnChange": false,
    "flake8.lintOnSave": true,
    "flake8.importStrategy": "fromEnvironment",
    "flake8.args": ["--config=.flake8"],

    // === Pylint Linting Configuration ===
    "pylint.enabled": true,
    "pylint.lintOnChange": false,
    "pylint.lintOnSave": true,
    "pylint.importStrategy": "fromEnvironment",
    "pylint.args": ["--rcfile=pyproject.toml"],

    // === MyPy Type Checking Configuration ===
    "mypy-type-checker.enabled": true,
    "mypy-type-checker.lintOnChange": false,
    "mypy-type-checker.lintOnSave": true,
    "mypy-type-checker.importStrategy": "fromEnvironment",
    "mypy-type-checker.args": ["--config-file=pyproject.toml"],

    // === isort Import Sorting Configuration ===
    "isort.enabled": true,
    "isort.lintOnSave": true,
    "isort.importStrategy": "fromEnvironment",
    "isort.args": ["--settings-path=pyproject.toml"],

    // === Testing Configuration ===
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "tests",
        "-v"
    ],

    // === Spell Checking ===
    "cSpell.words": [
        "loadcell",
        "AJINEXTEK",
        "baudrate",
        "pyproject",
        "mypy",
        "eol",
        "dut",
        "mcu",
        "ajinextek",
        "bs205",
        "lma",
        "oda",
        "loguru",
        "asyncio",
        "yaml"
    ],
    "python-envs.pythonProjects": []
}
