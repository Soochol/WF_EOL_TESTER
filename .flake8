[flake8]
max-line-length = 100
max-complexity = 10
ignore = E203,E501,W503,E226,E24
extend-ignore = E203,E501,W503,E226,E24
per-file-ignores = 
    __init__.py:F401,F403
    tests/*:F401,F811,E402,S101,S106
    **/test_*.py:F401,F811,E402,S101,S106
    **/mock/*:F401,F811,W0613
    setup.py:E402
    conftest.py:F401,F811
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .tox,
    .mypy_cache,
    node_modules,
    migrations,
    .coverage,
    htmlcov